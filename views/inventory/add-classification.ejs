<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Classification</title>
  <script>
    function validateClassificationForm() {
      const name = document.getElementById('classification_name').value;
      const regex = /^[A-Za-z0-9]+$/;
      if (!regex.test(name)) {
        alert('Classification name cannot contain spaces or special characters.');
        return false;
      }
      return true;
    }
  </script>
</head>
<body>
  <div id="wrapper">
    <h1>Add New Classification</h1>
    <% if (typeof message !== "undefined" && message) { %>
      <div class="notice"><%= message %></div>
    <% } %>
    <% if (typeof errors !== "undefined" && errors.errors && errors.errors.length) { %>
      <ul class="notice">
        <% errors.errors.forEach(function(error) { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    <% } %>
    <form action="/inv/add-classification" method="post" onsubmit="return validateClassificationForm()">
      <label for="classification_name">Classification Name (no spaces or special characters):</label>
      <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z0-9]+$" value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>">
      <button type="submit">Add Classification</button>
    </form>
  </div>
</body>
</html>
