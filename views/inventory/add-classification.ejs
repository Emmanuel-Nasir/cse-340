<main class="add-classification-view">
  <h1>Add Classification</h1>

  <% if (errors && errors.length > 0) { %>
    <div class="validation-errors">
      <% errors.forEach(function(error) { %>
        <p><%= error.msg %></p>
      <% }) %>
    </div>
  <% } %>

  <form action="/inv/add-classification" method="post" id="add-classification-form" onsubmit="return validateClassificationForm()">
    <label for="classification_name">Classification Name</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      pattern="^[A-Za-z]+$"
      title="Only letters allowed (no spaces, numbers, or special characters)"
      required
      value="<%= classification_name ? classification_name : '' %>"
    >
    <button type="submit">Add Classification</button>
  </form>
</main>

<script>
  function validateClassificationForm() {
    const name = document.getElementById('classification_name').value.trim();
    const regex = /^[A-Za-z]+$/; // âœ… only letters
    if (!regex.test(name)) {
      alert('Classification name can only contain letters (no numbers, spaces, or special characters).');
      return false;
    }
    return true;
  }
</script>
