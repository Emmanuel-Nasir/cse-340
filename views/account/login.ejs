<main>
  <div class="login-page-wrapper">
    <form class="login-form" method="post" action="/account/login">
      <h2>Login into your account</h2>

      <% if (messages().notice) { %>
        <div class="flash-message"><%= messages().notice %></div>
      <% } %>

      <label for="email">Email</label>
      <input type="email" id="email" name="account_email" required placeholder="Enter your email">

      <label for="password">Password</label>
      <input type="password" id="password" name="account_password" required placeholder="Enter your password">

      <button type="submit">Login</button>

      <a class="register-link" href="/account/register">Don't have an account? Register</a>
    </form>
  </div>
</main>

<script src="/js/script.js"></script>
